{
	"name": "rodburger",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"svg": "$npm_execpath run svg:optimize && $npm_execpath run svg:to-path",
		"svg:optimize": "svgo -f ./src/icons -o ./src/icons --multipass",
		"svg:to-path": "svgtofont --sources ./src/icons --output ./static/fonts"
	},
	"devDependencies": {
		"@picocss/pico": "^1.5.10",
		"@playwright/test": "^1.33.0",
		"@sveltejs/adapter-auto": "^2.0.1",
		"@sveltejs/adapter-vercel": "^3.0.0",
		"@sveltejs/kit": "^1.17.0",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"eventsource-parser": "^1.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"showdown": "^2.1.0",
		"svelegante": "^0.2.13",
		"svelte": "^3.59.1",
		"svelte-check": "^3.3.2",
		"svgo": "^3.0.2",
		"svgtofont": "^3.24.0",
		"typescript": "^5.0.4",
		"uuid": "^9.0.0",
		"vite": "^4.3.7",
		"vitest": "^0.31.0"
	},
	"type": "module"
}
